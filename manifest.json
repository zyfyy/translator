{
	"name": "酷爱翻译",
	"manifest_version": 2,
	"version": "1.2",
	"description": "碰到英文生单词？汉字有几个意思？双击、划句，英译汉、汉译英，快捷好用。",
	"icons": {
		"48": "icon48.png"
	},
	"background": {
		"persistent": false,
		"scripts": [
			"js/sha256.min.js",
			"js/md5.min.js",
			"js/bg.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"css": [
				"css/show.css",
				"css/font.css"
			],
			"js": [
				"js/content.js"
			]
		}
	],
	"permissions": [
		"tabs",
		"http://openapi.baidu.com/"
	],
	"browser_action": {
		"default_icon": "icon128.png",
		"default_popup": "popup.html"
	}
}
