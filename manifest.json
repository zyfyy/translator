{
	"name": "酷爱翻译",
	"manifest_version": 2,
	"version": "1.2.1",
	"description": "碰到英文生单词？汉字有几个意思？双击、划句，英译汉、汉译英，快捷好用。",
	"icons": {
		"48": "icon48.png"
	},
	"background": {
		"page": "background.html"
	},
	"options_page": "options.html",
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"css": [
				"css/show.css",
				"css/font.css"
			],
			"js": [
				"js/content.js"
			]
		}
	],
	"permissions": [
		"activeTab",
		"storage",
		"notifications",
		"system.cpu",
		"system.memory",
		"system.storage",
		"tabs",
		"alarms"
	],
	"browser_action": {
		"default_icon": "icon128.png",
		"default_popup": "popup.html"
	}
}
